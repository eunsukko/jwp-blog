<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} [%-5level] [%thread] [%logger{36}] [%M] - %m%n</Pattern>
        </layout>
    </appender>

    <logger name="techcourse.myblog.domain" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="techcourse.myblog.service" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="techcourse.myblog.web" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="techcourse.myblog.error" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="techcourse.myblog.interceptor" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- 기본 log level을 설정한다. -->
    <!--<root level="INFO">-->
    <!--<appender-ref ref="STDOUT" />-->
    <!--</root>-->
</configuration>